extends ../../layouts/default.pug
include ../../mixins/filterStatus.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/formChangeMulti.pug

block main
  h1.mb-4 #{pageTitle}

  .card.mb-3
    .card-header Bộ lọc và Tìm kiếm
    .card-body
      .row
        .col-6
          +filterStatus(filterStatus)

        .col-6
          +search(keyword)

  .card.mb-3
    .card-header Danh sách
    .card-body
      +formChangeMulti(`/admin/products/change-multi?_method=PATCH`)
      

    table.table.table-hover.table-sm(checkbox-multi)
      thead
        tr
          td
            input(type="checkbox", name="checkall")
          th STT
          th Hình ảnh
          th Tiêu đề
          th Giá
          th Trạng thái
          th Hành động

      tbody
        each item, index in products
          tr 
            td
              input(
                type="checkbox",
                name="id",
                value=item.id
              )
            td #{index + 1}
            td
              img.product-img(
                src=item.thumbnail
                alt=item.title
                width="100px"
                height="auto"
              )
            td #{item.title}
            td.text-center #{item.price}
            td
              if(item.status == "active")
                a(
                  href="javascript:;" 
                  class="badge badge-success"
                  data-id=item.id
                  data-status=item.status
                  button-change-status
                ) Hoạt động 
              else
                a(
                  href="javascript:;" 
                  class="badge badge-danger"
                  data-id=item.id
                  data-status=item.status
                  button-change-status
                ) Dừng hoạt động 
            td.text-center
              button.btn.btn-warning.btn-sm Edit
              button.btn.btn-danger.btn-sm.ml-1 Delete
  
  nav
    +pagination(pagination)

  form(
    form-change-status
    action=""
    method="POST"
    data-path=`/admin/products/change-status`
  )
