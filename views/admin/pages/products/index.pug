extends ../../layouts/default.pug

block main
  h1(class="mb-4") #{pageTitle}
  table.table.table-hover.table-sm
    thead
      tr
        th STT
        th Hình ảnh
        th Tiêu đề
        th Giá
        th Trạng thái
        th Hành động

    tbody
      tr 
        td 1
        td
          img(
            src="https://cdn.dribbble.com/users/182246/screenshots/1918802/media/6c0f0d12c92546839e8539ae9c74e102.png?resize=800x600&vertical=center"
            alt="Sản phẩm 1"
            width="100px"
            height="auto"
          )
        td Sản phẩm 1
        td 100$
        td
          a(href="#" class="badge badge-success") Hoạt động 
        td
          button(class="btn btn-warning btn-sm") Sửa
          button(class="btn btn-danger btn-sm ml-1") Xóa

      tr 
        td 2
        td
          img(
            src="https://cdn.dribbble.com/users/1553639/screenshots/18234046/media/879fbcf7ae1f73dc58c1350602ef2597.png?resize=1000x750&vertical=center"
            alt="Sản phẩm 2"
            width="100px"
            height="auto"
          )
        td Sản phẩm 2
        td 150$
        td
          a(href="#" class="badge badge-danger") Dừng hoạt động
        td
          button(class="btn btn-warning btn-sm") Sửa
          button(class="btn btn-danger btn-sm ml-1") Xóa