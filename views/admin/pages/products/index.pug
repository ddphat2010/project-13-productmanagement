extends ../../layouts/default.pug
include ../../mixins/filterStatus.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/formChangeMulti.pug
include ../../mixins/alert.pug
include ../../mixins/sort.pug

block main
  +alert-success(5000)

  h1.mb-4 #{pageTitle}

  .card.mb-3
    .card-header Bộ lọc và Tìm kiếm
    .card-body
      .row
        .col-6
          +filterStatus(filterStatus)

        .col-6
          +search(keyword)
    
    .card.mb-3
      .card-header Sắp Xếp
      .card-body
        .col-4
          +sort([
            {
              label: "Vị trí giảm dần",
              value:"position-desc"
            },{
              label: "Vị trí tăng dần",
              value:"position-asc"
            },{
              label: "Giá giảm dần",
              value:"price-desc"
            },{
              label: "Giá giảm dần",
              value:"price-asc"
            },{
              label: "Tiêu đề A - Z",
              value:"title-desc"
            },{
              label: "Tiêu đề Z - A",
              value:"title-asc"
            }

          ])

  .card.mb-3
    .card-header Danh sách
    .card-body
      .row
        .col-8
          +formChangeMulti(`/admin/products/change-multi?_method=PATCH`)
        .col-4.text-right
          if(role.permissions.includes("products_create"))
            a(
              href=`/admin/products/create`
              class="btn btn-outline-success"
            ) + Thêm mới
      

    table.table.table-hover.table-sm(checkbox-multi)
      thead
        tr
          td
            input(type="checkbox", name="checkall")
          th STT
          th Hình ảnh
          th Tiêu đề
          th Giá
          th Vị trí
          th Trạng thái
          th Hành động

      tbody
        each item, index in products
          tr 
            td
              input(
                type="checkbox",
                name="id",
                value=item.id
              )
            td #{index + 1}
            td
              img.product-img(
                src=item.thumbnail
                alt=item.title
                width="100px"
                height="auto"
              )
            td #{item.title}
            td.text-center #{item.price}
            td.text-center 
              input(
                type="number"
                name="position"
                value=item.position
                style="width: 60px"
                min="1"
              )
            td
              if(item.status == "active")
                a(
                  href="javascript:;" 
                  class="badge badge-success"
                  data-id=item.id
                  data-status=item.status
                  button-change-status
                ) Hoạt động 
              else
                a(
                  href="javascript:;" 
                  class="badge badge-danger"
                  data-id=item.id
                  data-status=item.status
                  button-change-status
                ) Dừng hoạt động 
            td.text-center
              a(
                href=`/admin/products/detail/${item.id}`
                class="btn btn-secondary btn-sm"

              ) Chi tiết
              a(
                href=`/admin/products/edit/${item.id}`
                class="btn btn-warning btn-sm ml-1"

              ) Chỉnh sửa
              button(
                class="btn btn-danger btn-sm ml-1" 
                button-delete
                data-id=item.id
              ) Xóa
  
  nav
    +pagination(pagination)

  form(
    form-change-status
    action=""
    method="POST"
    data-path=`/admin/products/change-status`
  )

  form(
    form-delete-item
    action=""
    method="POST"
    data-path=`/admin/products/delete`
  )
