include ../mixins/sub-menu.pug

header.header
  .container
    .row.align-items-center
        .col-3
            .inner-logo
                a(href="/")
                    img(src="/images/logo.jpg", alt="Logo")

        .col-5
            form(
                action="/search"
                method="GET"
            ) 
                div(class="form-group d-flex mb-0")
                    input(
                        type="text"
                        placeholder="Nhập từ khóa..."
                        class="form-control"
                        name="keyword"
                        value=keyword
                    )
                    button(
                        type="submit"
                        class="btn btn-primary"
                    ) Tìm

        .col-4
            .inner-menu
                ul
                    li
                        a(href="/") Trang chủ
                    li(class="sub-menu")
                        a(href="/products") Sản phẩm
                        if(layoutCategoryProducts)
                            +sub-menu(layoutCategoryProducts)
                    li
                        a(href="/cart") Giỏ hàng (#{cart ? cart.products.length : 0})